
.container {
  min-height: 100vh;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: rgb(233, 162, 139);
} 

.container.dark{
  background-color: #1f2937
}
.content{
  flex: 1;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 50rpx;
}
.content.dark{
  background-color: #1f2937;
}
.circle-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.message-wrapper {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
}


.message-label {
  font-size: 16px;
  color: #333;
}

.dark .message-label {
  color: #e0e0e0;
}

.message-time {
  font-size: 24px;
  font-weight: bold;
  color: #1989fa;
}

.dark .message-time {
  color: #64b5f6;
}
