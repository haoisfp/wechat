/* pages/connect/connect.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0;
}

.device-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  min-height: 300rpx;
}

.device-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.device-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.device-status {
  font-size: 32rpx;
  font-weight: 500;
}

.connected {
  color: #52c41a;
}

.connecting {
  color: #1890ff;
}

.disconnected {
  color: #f5222d;
}

.device-detail {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 0;
  font-size: 28rpx;
}

.detail-label {
  color: #666;
}

.detail-value {
  color: #333;
  font-weight: 500;
}

.no-device {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  padding: 60rpx 0;
  text-align: center;
}

.no-device text {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.sub-text {
  font-size: 28rpx;
  color: #bbb;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  flex: 1;
  margin: 0;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

.add-btn {
  background: #1890ff;
  color: white;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

.info-section {
  flex: 1;
  overflow-y: auto;
}

.info-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.info-desc {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
  line-height: 1.5;
}