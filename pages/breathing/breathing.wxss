/* pages/breathing/breathing.wxss */
.container {
  min-height: 100vh;
  background-color: #e6e6ff;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tutorial-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  background-color: #4169E1;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.exercise-icon {
  margin-top: 200rpx;
  margin-bottom: 100rpx;
  width: 300rpx;
  height: 300rpx;
  opacity: 0.6;
}

.exercise-icon image {
  width: 100%;
  height: 100%;
}

.button-container {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 80rpx;
}

.action-btn {
  width: 200rpx !important;
  height: 80rpx !important;
  font-size: 36rpx !important;
  background-color: #7B68EE !important;
  border: none !important;
  color: white !important;
}

/* 修改数据显示区域的样式 */
.exercise-data {
  width: 60%;  /* 减小宽度 */
  margin: 0 auto;  /* 居中显示 */
  margin-bottom: 60rpx;
}

.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 10rpx 0;  /* 添加一些垂直内边距 */
}

.label {
  font-size: 36rpx;
  color: #333;
}

.value {
  font-size: 36rpx;
  color: #800080;
  font-weight: 500;
}

.quit-btn {
  width: 200rpx !important;
  height: 80rpx !important;
  font-size: 36rpx !important;
  background-color: #7B68EE !important;
  border: none !important;
  color: white !important;
  margin-bottom: 100rpx;
}