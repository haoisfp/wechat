/* utils/theme.wxss */

/* 浅色模式样式 */
.light-mode {
  --bg-color: #f8f8f8;
  --text-color: #333333;
  --card-bg: #ffffff;
  --border-color: #eeeeee;
  --primary-color: #1a73e8;
}

/* 深色模式样式 */
.dark-mode {
  --bg-color: #1f1f1f;
  --text-color: #e0e0e0;
  --card-bg: #2d2d2d;
  --border-color: #3d3d3d;
  --primary-color: #4c8bf5;
}

/* 应用主题变量的通用样式 */
.container {
  background-color: var(--bg-color);
  color: var(--text-color);
  transition: background-color 0.3s, color 0.3s;
}

.card {
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
}

.btn-primary {
  background-color: var(--primary-color);
  color: rgb(165, 40, 40);
}