/**app.wxss**/
@import "./utils/theme.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 暗色主题 */
.container.dark {
  background-color: #1f2937;
  color: #fff;
}


.theme-switch {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  padding: 20rpx;
  z-index: 999;
}

.dark .theme-switch {
  color: #fff;
}
